# Server Configuration
PORT=5500
NODE_ENV=development

# PostgreSQL Database (Relational data: users, companies, emissions)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=carbondepict
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password

# MongoDB Database (Non-relational: emission factors, AI data, logs)
MONGODB_URI=mongodb://localhost:27017/carbondepict

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# API Keys
# AI Service (e.g., Grok API or OpenAI)
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.x.ai/v1

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
