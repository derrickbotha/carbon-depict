# Server Configuration
PORT=5500
NODE_ENV=development
CLIENT_URL=http://localhost:3500

# MongoDB Database (Primary data store)
# For local development (no auth):
MONGODB_URI=mongodb://localhost:27017/carbondepict
# For Docker/Production (with auth):
# MONGODB_URI=mongodb://carbondepict_user:userpass123@localhost:27017/carbondepict?authSource=carbondepict

# MongoDB Pool Configuration (for high-performance production)
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis (for Bull job queues and caching)
# Set REDIS_ENABLED=false to disable Redis and run queues synchronously
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://:yourpassword@localhost:6379

# JWT & Sessions
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d
SESSION_SECRET=your-session-secret-change-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-app-password
SMTP_FROM=noreply@carbondepict.com

# API Keys
# AI Service (e.g., Grok API or OpenAI)
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.x.ai/v1

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
