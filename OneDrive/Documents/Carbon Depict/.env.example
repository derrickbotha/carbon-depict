# Production Environment Variables
# Copy this file to .env and fill in the values

# Application
NODE_ENV=production
FRONTEND_PORT=3500
BACKEND_PORT=5500

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=carbonuser
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=carbondepict

# MongoDB (optional)
MONGO_USER=carbonadmin
MONGO_PASSWORD=CHANGE_THIS_IN_PRODUCTION
MONGO_DB=carbondepict
MONGO_PORT=27017

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_KEY
JWT_EXPIRE=7d

# API URLs
VITE_API_URL=http://localhost:5500/api
CORS_ORIGIN=http://localhost:3500

# External API Keys
DEFRA_API_KEY=your_defra_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@carbondepict.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET
SESSION_EXPIRE=86400000

# AWS S3 (optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=carbon-depict-uploads
